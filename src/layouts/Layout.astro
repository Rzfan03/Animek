---
const page = Number(Astro.url.searchParams.get("page")) || 1;

const res = await fetch(`https://www.sankavollerei.com/anime/zoronime/home?page=${page}`);
const json = await res.json();
const animeList = json?.anime_list ?? json?.animes ?? json?.data ?? [];
const recent = Array.isArray(animeList) ? animeList.slice(0, 10) : [];
const dataAnime = Array.isArray(animeList) ? animeList : [];



const api = await fetch(`https://www.sankavollerei.com/anime/zoronime/year/2025?page=2`);
const jsonAnime = await api.json();
const anime = jsonAnime?.anime_list ?? jsonAnime?.animes ?? jsonAnime?.data ?? [];
const recents = Array.isArray(anime) ? anime.slice(0, 10) : [];
const dataAnimes = Array.isArray(anime) ? anime : [];

import 'remixicon/fonts/remixicon.css';
import '../styles/global.css'

import Image from 'astro/components/Image.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
